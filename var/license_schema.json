{
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "$id" : "",
    "title" : "License db",
    "type" : "object",
    "properties" : {
        "meta" : {
            "type" : "object",
            "properties" : {
		"description": { "type": "string" },
                "disclaimer": { "type": "string" },
		"comment": { "type": "string" },
		"date": { "type": "string" },
		"authors": {
		    "type": "array",
		    "items": {
			"author": "string",
			"organization": "string"
		    }
		}
            },
            "required" : [ "description", "date" ]
	}
    },
    "spdxid": { "type": "string" },
    "aliases": {
        "type": "array",
        "items": {
            "type": "string"
        }
    },
    "scancode_key":{ "type": "string" },
    "name": { "type": "string" },
    "required" : [ "meta", "spdxid", "name", "aliases" ]
}
