{
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "$id" : "",
    "title" : "License db",
    "type" : "object",
    "properties" : {
        "meta" : {
            "type" : "object",
            "properties" : {
		"description": { "type": "string" },
                "disclaimer": { "type": "string" },
                "organization": { "type": "string" },
                "versions": {
		    "type": "array",
                    "items": {
			"version": { "type": "string" },
			"comment": { "type": "string" },
			"date": { "type": "string" },
			"authors": {
			    "type": "array",
			    "items": {
				"author": "string",
				"organization": "string"
			    }
			},
			"reviewers": {
			    "type": "array",
			    "items": {
				"reviewer": "string",
				"organization": "string"
			    }
			},
			"required" : [ "version", "authors", "reviewers", "date", "comment" ]
                    }
		}
            },
            "required" : [ "organization", "description", "versions" ]
	}
    },
    "spdxid": { "type": "string" },
    "other_names": {
        "type": "array",
        "items": {
            "type": "string"
        }
    },
    "scancode-key":{ "type": "string" },
    "name": { "type": "string" },
    "required" : [ "meta", "spdxid", "name" ]
}
